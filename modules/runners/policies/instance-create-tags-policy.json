{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": "ec2:CreateTags",
            "Condition": {
                "ForAllValues:StringEquals": {
                    "aws:TagKeys": ${jsonencode(concat(["ghr:github_runner_id"], ec2_custom_allowed_tags_creation))}
                },
                "StringEquals": {
                    "aws:ARN": "$${ec2:SourceInstanceARN}"
                }
            },
            "Effect": "Allow",
            "Resource": "arn:*:ec2:*:*:instance/*"
        }
    ]
}
